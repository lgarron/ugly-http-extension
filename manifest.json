{
  "manifest_version": 3,

  "name": "Ugly HTTP",
  "description": "Makes HTTP pages conspicuous.",
  "author": "Lucas Garron",
  "version": "2.0.0",
  "icons": {
    "128": "./src/images/extensionIcon-128px.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
      "default_icon": {
      "128": "./src/images/extensionIcon-128px.png"
    },
    "default_title": "Undo"
  },
  "background": {
    "service_worker": "./src/background.js"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["http://*/*"],
      "js": ["./src/content.js"],
      "css": ["./src/ugly.css"],
      "world": "ISOLATED"
    }
  ],
  "options_ui": {
    "page": "./src/options/options.html"
  },
  "commands": {
    "go-secure": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Command+S"
      },
      "description": "Switch to HTTPS"
    }
  }
}
