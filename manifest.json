{
  "manifest_version": 2,

  "name": "Ugly HTTP",
  "description": "Makes HTTP pages conspicuous.",
  "author": "Lucas Garron (@lgarron)",
  "version": "1.1.0",
  "icons": {
    "128": "images/extensionIcon-128px.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "browser_action": {
      "default_icon": {
      "128": "images/extensionIcon-128px.png"
    },
    "default_popup": "popup.html",
    "default_title": "Undo"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["content.js"],
      "css": ["ugly.css"]
    }
  ],
  "background": {
    "scripts": ["command.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "commands": {
    "go-secure": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Command+S"
      },
      "description": "Switch to HTTPS"
    }
  }
}
